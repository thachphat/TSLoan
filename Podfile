# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'TSLoan' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for TSLoan
  pod 'Moya/RxSwift'
  pod 'Moya-ObjectMapper/RxSwift'
  pod 'DropDown'
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'SDWebImage'

  target 'TSLoanTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
    pod 'KIF'
    pod 'RxBlocking'
    pod 'RxTest'
  end

end
